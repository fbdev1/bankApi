<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.connection.username"></property>
        <property name="hibernate.connection.password"></property>
        <property name="hibernate.connection.url">jdbc:h2:./src/main/resources/b;DB_CLOSE_ON_EXIT=FALSE;AUTO_SERVER=TRUE</property>
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
<!--        <property name="hibernate.current_session_context_class">thread</property>-->
        <property name="hibernate.show_sql">true</property>
        <mapping class="entity.Client"/>
        <mapping class="entity.Card"/>
        <mapping class="entity.Account"/>
    </session-factory>
</hibernate-configuration>